<li class="nav-item dropdown">
    <a class="nav-link" href="#">Maps</a>
    <!-- Dropdown menu -->
    <div class="dropdown-menu mt-0" aria-labelledby="navbarDropdown" style="border-top-left-radius: 0px; border-top-right-radius: 0px; position: absolute; inset: 0px auto auto 0px;;" data-popper-placement="bottom-start" data-mdb-popper="null">
        <div class="dropdown-container">
            <div class="row my-3">
                <div class="col-md-6 col-xl-3 mb-3 mb-xl-0">
                    <div class="pt-2">
                        <i class="fas fa-caret-right pe-2" aria-hidden="true"></i>
                        <a href="/maps">
                            <h1>Maps</h1>
                        </a>
                    </div>
                </div>
            </div>
            <div class="row my-3">
                {{#get "pages" filter="slug:~'map-'" limit="all"}}
                    {{#foreach pages}}
                        <div class="col-md-12 col-lg-4 mb-3 mb-lg-0">
                            <div class="pt-2">
                                <div style="display:flex; flex-direction: column; align-items:center">
                                    <a href="{{url}}">
                                        {{#if feature_image}}
                                            <img 
                                                src="{{feature_image}}" 
                                                alt="Image 1" 
                                                class="img-fluid mb-2">
                                        {{else}}
                                            <img 
                                                src="{{asset "image/dummy_image.jpg"}}" 
                                                alt="Image 1" 
                                                class="img-fluid mb-2" >
                                        {{/if}}
                                        <h5 class="text-uppercase font-weight-bold">{{title}}</h5>
                                    </a>
                                </div>
                                {{#if excerpt}}
                                    <p>{{excerpt}}</p>                                    
                                {{/if}}
                            </div>
                        </div>
                    {{/foreach}}
                {{/get}}
            </div>
        </div>
    </div>
</li>

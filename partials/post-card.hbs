
<article class="post-card row">
    <div class="post-card-content col-7 col-sm-8 col-md-9 col-lg-9 col-xl-9">
        <div class="post-card-tags">
            {{#primary_tag}}
                <a class="post-card-primary-tag" href="{{url}}" >{{name}}</a>
            {{/primary_tag}}
            {{#if featured}}
                <span class="post-card-featured">{{> "icons/fire"}} Featured</span>
            {{/if}}
        </div>
        <a class="post-card-content-link" href="{{url}}">
            <h2 class="post-card-title">
                    {{#unless access}}
                    {{^has visibility="public"}}
                        {{#unless feature_image}}
                            {{> "icons/lock"}}
                        {{/unless}}
                    {{/has}}
                    {{/unless}}
                    {{title}}
            </h2>
            {{#if excerpt}}
            <div class="post-card-excerpt">{{excerpt}}</div>
            {{/if}}
        </a>
    </div>

    {{#if feature_image}}
    <a class="post-card-image-link col-2 col-sm-3 col-md-2 col-lg-2 col-xl-2 float-end" href="{{url}}">

        {{!-- This is a responsive image, it loads different sizes depending on device
        https://medium.freecodecamp.org/a-guide-to-responsive-images-with-ready-to-use-templates-c400bd65c433 --}}
        <img class="post-card-image"
            srcset="{{img_url feature_image size="s"}} 300w,
                    {{img_url feature_image size="m"}} 600w,
                    {{img_url feature_image size="l"}} 1000w,
                    {{img_url feature_image size="xl"}} 2000w"
            sizes="(max-width: 1000px) 400px, 800px"
            src="{{img_url feature_image size="m"}}"
            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
            loading="lazy"
        />

        {{#unless access}}
        {{^has visibility="public"}}
            <div class="post-card-access">
                {{> "icons/lock"}}
                {{#has visibility="members"}}
                    Members only
                {{else}}
                    Paid-members only
                {{/has}}
            </div>
        {{/has}}
        {{/unless}}

    </a>
    {{/if}}

       
    


</article>
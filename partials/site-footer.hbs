<footer class="site-footer outer">
    <div class="inner">

        <div class="footer-top">
            <div class="footer-left">
                <a href="/">
                    {{#if @site.logo}}
                        <img class="site-logo" src="{{@site.logo}}" alt="{{@site.title}}">
                    {{else}}
                        <h5>{{@site.title}}</h5>
                    {{/if}}
                </a>
                <h5>Find Us</h5>
                <div class="social-media">
                    <a class="social-media-link" href="#"><i class="fab fa-facebook-f"></i></a>
                    <a class="social-media-link" href="#"><i class="fab fa-twitter"></i></a>
                    <a class="social-media-link" href="#"><i class="fab fa-instagram"></i></a>
                    <a class="social-media-link"href="#"><i class="fab fa-linkedin-in"></i></a>
                    <a class="social-media-link"href="#"><i class="fab fa-tiktok"></i></a>
                    
                </div>
            </div>
            
            <div class="footer-right">
                {{#if @custom.footer_description}}
                <div class="footer-description">
                    <p>{{@custom.footer_description}}</p>
                </div>
                {{/if}}

                <div class="footer-navbar">
                    <ul>
                        {{!-- <li class="first"><a href="#">About</a></li> --}}
                        <li><a href="#">About</a></li>
                        <li><a href="#">Maps</a></li>
                        <li><a href="#">Research</a></li>
                        <li><a href="#">Policy</a></li>
                        <li><a href="#">Education</a></li>
                        <li><a href="#">Events</a></li>
                        <li><a href="#">Education</a></li>
                    </ul>
                </div>

                <div class="footer-cta">
                    {{#if @custom.email_signup_text}}
                        <h5 class="footer-cta-title">{{@custom.email_signup_text}}</h5>
                    {{/if}}
                    <a class="footer-cta-button" href="#/portal" data-portal>
                        <div class="footer-cta-input">Enter your email</div>
                        <span>Subscribe</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="footer-bottom">
            <div class="copyright">
                <a href="{{@site.url}}">Copyright &copy; {{date format="YYYY"}} {{@site.title}}</a>  </div>
        </div>
    </div>
</footer>